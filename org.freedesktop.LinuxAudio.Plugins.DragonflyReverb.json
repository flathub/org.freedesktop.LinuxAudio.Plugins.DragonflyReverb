{
    "id": "org.freedesktop.LinuxAudio.Plugins.DragonflyReverb",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "runtime-version": "stable",
    "sdk": "org.freedesktop.Sdk//23.08",
    "build-extension": true,
    "appstream-compose": false,
    "branch": "23.08",
    "build-options": {
        "prefix": "/app/extensions/Plugins/DragonflyReverb"
    },
    "modules": [
        {
            "name": "dragonflyreverb",
            "buildsystem": "simple",
            "build-options": {
                "arch": {
                    "aarch64": {
                        "env": {
                            "NOOPT": "true"
                        }
                    }
                }
            },
            "build-commands": [
                "make -j $FLATPAK_BUILDER_N_JOBS",
                "install -d ${FLATPAK_DEST}/lv2",
                "cp -r bin/*.lv2 ${FLATPAK_DEST}/lv2",
                "install -Dm755 -t ${FLATPAK_DEST}/vst bin/*-vst.so",
                "install -d ${FLATPAK_DEST}/vst3",
                "cp -r bin/*.vst3 ${FLATPAK_DEST}/vst3",
                "install -Dm755 bin/*.clap -t ${FLATPAK_DEST}/clap",
                "install -Dm644 LICENSE ${FLATPAK_DEST}/share/licenses/dragonflyreverb",
                "install -Dm644 org.freedesktop.LinuxAudio.Plugins.DragonflyReverb.metainfo.xml -t ${FLATPAK_DEST}/share/metainfo",
                "appstream-compose --basename=org.freedesktop.LinuxAudio.Plugins.DragonflyReverb --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.LinuxAudio.Plugins.DragonflyReverb"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/michaelwillis/dragonfly-reverb/releases/download/3.2.10/dragonfly-reverb-3.2.10-src.tar.xz",
                    "sha256": "18af55a9592c9f50c4d5f86c9d5159132735d9ba53d49e9cfe7169b3109f7743"
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Plugins.DragonflyReverb.metainfo.xml"
                }
            ]
        }
    ]
}
